{
    "manifestVersion": 1,
    "id": "vsts-work-item-create-child-links",
    "publisher": "cofomo-henrickpoliquin",
    "version": "0.1.113",
    "name": "Create Child links",
    "description": "Create child link defined by templates",
    "public": false,
    "categories": ["Repos"],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "static/img/one-click.png"
    },
    "scopes": [
        "vso.work", "vso.work_write", "vso.project"
    ],
    "contributions": [
        {
            "id": "create-child-links-work-item-button",
            "type": "ms.vss-web.action",
            "targets": [
                "ms.vss-work-web.work-item-toolbar-menu", 
                "ms.vss-work-web.backlog-item-menu",
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "name": "Create Child Links",
                "uri": "static/toolbar.html",
                "text": "Create work item child links",
                "title": "Create child links",
                "toolbarText": "Create child links",
                "icon": "static/img/one-click16.png",
                "groupId": "actions",
                "registeredObjectId": "create-child-links-work-item-button"
            }
        },
        {  
            "id": "create-child-links-work-item-form-page",
            "type": "ms.vss-work-web.work-item-form-page",
            "description": "Custom work item form page",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "My Page",
                "uri": "static/workItemPage.html"
            } 
        },
        {  
            "id": "create-child-links-work-item-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "Custom work item form control",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Target project team",
                "uri": "workItemControl.html",
                "height": 600
            },
            "inputs": [
                {
                    "id": "create-child-links-work-item-form-control-teamname",
                    "description": "target team project name.",
                    "type": "WorkItemField",
                    "properties": {
                        "workItemFieldTypes": ["String"]
                    },
                    "validation": {
                        "dataType": "String",
                        "isRequired": true
                    }
                }
            ]
        }
    ],
    "files": [
        {
            "path": "static",
            "addressable": true
        },
        {
            "path": "src/app.ts",
            "addressable": true,
            "packagePath": "scripts/app.js"
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "lib"
        }
        ,
        {
            "path": "node_modules/bluebird/js/release",
            "addressable": true,
            "packagePath": "lib"
        }
    ]
}