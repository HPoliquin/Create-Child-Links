{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "target": "es5",
        "rootDir": "src/",
        "outDir": "scripts/",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@types2",
            "typings/tsd.d.ts"
          ],
        "lib": ["es6", "dom", "es2015.iterable", "es2015.promise"]
    },
    "filesGlob": [
        "/src/**/*",
        "!**/*.tests.ts",
        "!node_modules/**/*"
    ],
    "exclude": [
        "node_modules",
        "bower_components"
    ],
    "files": [
        "src/app.ts"
    ]
}
