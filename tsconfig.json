{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noEmitHelpers": true,
        "pretty": true,
        "strictNullChecks": false,
        "noResolve": false,
        "rootDir": "src/",
        "outDir": "dist/",
        "types": [
            "vss-web-extension-sdk", 
            "jquery"
         ],
         "typeRoots": [
            "./node_modules/@types"
         ],
        "lib": [
            "es2018",
            "es2018.promise",
            "es5",
            "es6",
            "dom"
        ]
    },
    "include": [
        "/src/**/*",
        "/static/**/*"
    ],
    "exclude": [
        "node_modules",
        "bower_components",
        "typings/main",
        "typings/main.d.ts"
      ]
    
}