{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "target": "es5",
        "rootDir": "src/",
        "outDir": "scripts/",
        "types": [
            "vss-web-extension-sdk"
        ],
        "lib": [
            "es5",
            "es7",
            "es2015.collection",
            "dom",
            "es2015.iterable",
            "es2015.promise"
        ]
    },
    "filesGlob": [
        "/src/**/*",
        "!**/*.tests.ts",
        "!node_modules/**/*",
        "!Graphics/**/*"
    ],
    "exclude": [
        "node_modules",
        "bower_components",
        "static/**/*.xcf",
        "Graphics"
    ],
    "files": [
        "src/configurationAction.ts",
        "src/toolbarAction.ts",
        "src/toolbarCreateWIT.ts",
        "src/workItemPage.ts"
    ]
}
